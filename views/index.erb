<h1>All the pizzas</h1>

<% for order in @orders %>

<p>Name: <%= order.pretty_name() %></p>
<p>Order: <%= order.quantity %> x <%= order.topping %></p>
<p><a href="/pizza_orders/<%= order.id %>">Show order</a></p>

<form action="/pizza_orders/delete/<%= order.id %>" method="post">
  <button type="submit" name="button">Delete Order</button>
</form>

<hr />


<% end %>
